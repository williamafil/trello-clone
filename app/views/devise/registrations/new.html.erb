<div class="flex flex-col h-screen bg-gray-100">
  <div class="grid place-items-center mx-2 my-20">
    <div class="w-11/12 p-12 sm:w-8/12 md:w-6/12 lg:w-5/12 2xl:w-4/12
                px-6 py-10 sm:px-10 sm:py-6
              bg-white rounded-lg shadow-md lg:shadow-lg"
    >
      <h2 class="text-center font-semibold text-3xl lg:text-3xl text-gray-800 uppercase">
        Sign up
      </h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-4">
          <%= f.label :name, class: 'block text-xs font-semibold text-gray-600 uppercase'  %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'block w-full py-1 px-3
                    text-gray-800 appearance-none
                    border-b-2 border-gray-100
                    focus:text-gray-500 focus:outline-none focus:border-gray-200' %>
        </div>

        <div class="field mt-4">
          <%= f.label :email, class: 'block text-xs font-semibold text-gray-600 uppercase' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full py-1 px-3
                    text-gray-800 appearance-none
                    border-b-2 border-gray-100
                    focus:text-gray-500 focus:outline-none focus:border-gray-200' %>
        </div>

        <div class="field mt-4">
          <%= f.label :password, class: 'text-xs font-semibold text-gray-600 uppercase'  %>
          <% if @minimum_password_length %>
          <em class="text-xs uppercase text-red-400">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'block w-full py-1 px-3
                    text-gray-800 appearance-none
                    border-b-2 border-gray-100
                    focus:text-gray-500 focus:outline-none focus:border-gray-200'  %>
        </div>

        <div class="field mt-4">
          <%= f.label :password_confirmation, class: 'block text-xs font-semibold text-gray-600 uppercase'  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'block w-full py-1 px-3
                    text-gray-800 appearance-none
                    border-b-2 border-gray-100
                    focus:text-gray-500 focus:outline-none focus:border-gray-200'  %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: 'w-full py-3 mt-6 bg-gray-800 rounded-sm
                    font-medium text-white uppercase
                    focus:outline-none hover:bg-gray-700 hover:shadow-none' %>
        </div>
      <% end %>

      <div class="mt-2">
        <%= render "devise/shared/links" %>
      </div>
